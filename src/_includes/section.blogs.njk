{% for item in collections.sections %}
  {% if item.data.type === 'blogs' %}
    <div id="blogs" class="w-full min-h-screen flex flex-col justify-center items-center py-12">
      <div class="self-center text-center w-full sm:w-2/3 xl:w-1/2 px-4 sm:px:0">
        <h2 class="tracking-wide text-purple-700 font-bold text-4xl mb-4">{{ item.data.title }}</h2>
        <div class="font-light  text-xl mb-6">
          {{ item.templateContent | safe }}
        </div>
      </div>
      <div class="self-center w-full xl:w-4/5 flex flex-col sm:flex-row flex-wrap px-4 xl:px:0">
        {% for item in blogs %}
          <div class="w-full sm:w-1/2 flex flex-row flex-no-wrap  px-4 sm:px-8 py-6 sm:py-12">
    
            <div class="w-2/3 xl:w-3/4">
              <h3 class="tracking-wide text-purple-500 font-bold text-2xl uppercase mb-2">{{ item.title }}</h3>
              <div class="font-light text-lg">
                {{ item.description | markdown | safe }}
              </div>
            </div>
            
            <div>
            <div class="flex flex-row w-full justify-center pt-6">
              <a class="px-10 py-2 text-gray-200 bg-purple-600 rounded-full shadow-md text-lg hover:bg-gray-800 hover:border-red" href="#register">View</a>
            </div>

            </div>

          </div>
        {% endfor %}
      </div>
 
     
    </div>
  {% endif %}
{% endfor %}